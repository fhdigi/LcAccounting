<Page
    x:Class="LcAccountingApplication.Views.PopupControls.EmployeeDataPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LcAccountingApplication.Views.PopupControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0"
                   Grid.Column="0"
                   Text="Last Name"
                   VerticalAlignment="Center" />

        <TextBox Grid.Row="0"
                 Grid.Column="1"
                 Margin="0,5,0,5" />

        <TextBlock Grid.Row="1"
                   Grid.Column="0"
                   Text="First Name"                   
                   VerticalAlignment="Center" />

        <TextBox Grid.Row="1"
                 Grid.Column="1"
                 Margin="0,5,0,5" />

        <TextBlock Grid.Row="2"
                   Grid.Column="0"
                   Text="Middle Initial"                   
                   VerticalAlignment="Center" />

        <TextBox Grid.Row="2"
                 Grid.Column="1" 
                 Margin="0,5,0,5" />

        <TextBlock Grid.Row="3"
                   Grid.Column="0"
                   Text="Address"                   
                   VerticalAlignment="Center" />

        <TextBox Grid.Row="3"
                 Grid.Column="1" 
                 Margin="0,5,0,5" />

        <TextBlock Grid.Row="4"
                   Grid.Column="0"
                   Text="Social Security #"
                   VerticalAlignment="Center"/>
        
        <TextBox Grid.Row="4"
                 Grid.Column="1"
                 Margin="0,5,0,5"/>

        <TextBlock Grid.Row="5"
                   Grid.Column="0"
                   Text="Phone Number"
                   VerticalAlignment="Center"/>

        <TextBox Grid.Row="5"
                 Grid.Column="1"
                 Margin="0,5,0,5"/>

        <TextBlock Grid.Row="6"
                   Grid.Column="0"
                   VerticalAlignment="Center"
                   Text="City"/>
        <TextBox Grid.Row="6"
                 Grid.Column="1"
                 VerticalAlignment="Center"/>

        <TextBlock Grid.Row="7"
                   Grid.Column="0"
                   VerticalAlignment="Center"
                   Text="State"/>
        <ListBox Grid.Row="7"
                 Grid.Column="1"
                 VerticalAlignment="Center"/>

        <TextBlock Grid.Row="8"
                   Grid.Column="0"
                   VerticalAlignment="Center"
                   Text="Zip Code"/>
        <TextBox Grid.Row="8"
                 Grid.Column="1"
                 VerticalAlignment="Center"/>

        <TextBlock Grid.Row="9"
                   Grid.Column="0"
                   VerticalAlignment="Center"
                   Text="Date Hired"/>
        <DatePicker Grid.Row="9"
                 Grid.Column="1"
                 VerticalAlignment="Center"/>
        <TextBlock Grid.Row="10"
                   Grid.Column="0"
                   VerticalAlignment="Center"
                   Text="Hourly Rate"/>
        <TextBox Grid.Row="10"
                 Grid.Column="1"
                 VerticalAlignment="Center"/>

        <TextBlock Grid.Row="11"
                   Grid.Column="0"
                   VerticalAlignment="Center"
                   Text="Additional Pay"/>
        <TextBox Grid.Row="11"
                 Grid.Column="1"
                 VerticalAlignment="Center"/>

        <TextBlock Grid.Row="12"
                   Grid.Column="0"
                   VerticalAlignment="Center"
                   Text=" Employee Type"/>
        <TextBox Grid.Row="12"
                 Grid.Column="1"
                 VerticalAlignment="Center"/>
       
        <TextBlock Grid.Row="13"
                   Grid.Column="0"
                   VerticalAlignment="Center"
                   Text="D.O.B"/>
        <DatePicker Grid.Row="13"
                 Grid.Column="1"
                 VerticalAlignment="Center"/>

        <TextBlock Grid.Row="14"
                   Grid.Column="0"
                   VerticalAlignment="Center"
                   Text="This EMployee is Inactive"/>
        <CheckBox Grid.Row="14"
                 Grid.Column="1"
                 VerticalAlignment="Center"
                  HorizontalAlignment="Center"/>

        <TextBlock Grid.Row="15"
                   Grid.Column="0"
                   VerticalAlignment="Center"
                   Text="Termination Date"/>
        <DatePicker Grid.Row="15"
                 Grid.Column="1"
                 VerticalAlignment="Center"
                  HorizontalAlignment="Center"/>








    </Grid>

